@model Escola.Models.Matricula

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Matricula</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdMatricula" />
            <div class="form-group">
                <label asp-for="Aluno.NomeAluno" class="control-label"></label>
                <input asp-for="Aluno.NomeAluno" class="form-control" />
                <span asp-validation-for="Aluno.NomeAluno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Curso.NomeCurso" class="control-label"></label>
                <input asp-for="Curso.NomeCurso" class="form-control" />
                <span asp-validation-for="Curso.NomeCurso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para Matriculas</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
