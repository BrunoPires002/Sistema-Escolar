@model Escola.Models.MatriculaModel

@{
    ViewData["Title"] = "Cadastrar";
}

<h1>Cadastrar</h1>

<h4>Matricula</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.DropDownList("IdAluno", (IEnumerable<SelectListItem>)ViewBag.Alunos, null, new { @class ="form-control" })
            </div>
            <div class="form-group">
                @Html.DropDownList("IdCurso", (IEnumerable<SelectListItem>)ViewBag.Cursos, null, new { @class ="form-control" })
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para Matriculas</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
