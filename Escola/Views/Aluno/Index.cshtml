@model IEnumerable<Escola.Models.Aluno>

@{
    ViewData["Title"] = "Alunos";
}

<h1>Alunos</h1>

<p>
    <a asp-action="Create" type="button" class="btn btn-success">Cadastrar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeAluno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RgAluno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataNascAluno)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeAluno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RgAluno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataNascAluno)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdAluno" type="button" class="btn btn-outline-primary">Editar</a>
                <a asp-action="Details" asp-route-id="@item.IdAluno" type="button" class="btn btn-outline-info">Detalhes</a>
                <a asp-action="Delete" asp-route-id="@item.IdAluno" type="button" class="btn btn-danger">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
