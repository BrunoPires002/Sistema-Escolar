@model Escola.Models.Curso

@{
    ViewData["Title"] = "Deletar";
}

<h1>Deletar</h1>

<h3>Você tem certeza que deseja deletar o curso @Html.DisplayFor(model => model.NomeCurso)? </h3>
<div>
    <h4>Curso</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeCurso)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeCurso)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DuracaoCurso)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DuracaoCurso)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DescCurso)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DescCurso)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdCurso" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index">Voltar para Cursos</a>
    </form>
</div>
