@model Escola.Models.Curso

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>


<h4>Curso ( @Html.DisplayFor(model => model.NomeCurso) )</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdCurso" />
            <div class="form-group">
                <label asp-for="NomeCurso" class="control-label"></label>
                <input asp-for="NomeCurso" class="form-control" />
                <span asp-validation-for="NomeCurso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DuracaoCurso" class="control-label"></label>
                <input asp-for="DuracaoCurso" class="form-control" />
                <span asp-validation-for="DuracaoCurso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescCurso" class="control-label"></label>
                <input asp-for="DescCurso" class="form-control" />
                <span asp-validation-for="DescCurso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para Cursos</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
